vendor(prop, args) {
    -webkit-{prop}: args;
    -moz-{prop}: args;
    -ms-{prop}: args;
    -o-{prop}: args;
    {prop}: args;
}

user-select() {
    vendor('user-select', arguments);
    vendor('touch-callout', arguments);
}

transform() {
    vendor('transform', arguments);
}

transform-origin() {
    vendor('transform-origin', arguments);
}

box-sizing() {
    vendor('box-sizing', arguments);
}

box-shadow() {
    vendor('box-shadow', arguments);
}

text-shadow() {
    vendor('text-shadow', arguments);
}

overflow-scrolling() {
    vendor('overflow-scrolling', arguments);
}

animation() {
    vendor('animation', arguments);
}

transition() {
    vendor('transition', arguments);
}

border-radius() {
    vendor('border-radius', arguments);
}

border-radius-left() {
    vendor('border-radius-left', arguments);
}

border-radius-left() {
    vendor('border-radius-left', arguments);
}

background-clip() {
    vendor('background-clip', arguments);
}

box-flex() {
    vendor('box-flex', arguments);
}

